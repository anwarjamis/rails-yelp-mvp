<h1><%= @restaurant.name %></h1>
<p>Address: <%= @restaurant.address %></p>
<%= @restaurant.category %>
<br><br>
<h2>Reviews</h2>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br><br>
<%= link_to 'Back to index', restaurants_path %>
<br>
<%= link_to 'Add review', new_restaurant_review_path(@restaurant) %>
