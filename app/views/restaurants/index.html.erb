<h1>Restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li><h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3></li>
    <li>Address: <%= restaurant.address %></li>
    <li><%= restaurant.category %></li>
  <% end %>
</ul>
<%= link_to "Add new restaurant", new_restaurant_path %>
